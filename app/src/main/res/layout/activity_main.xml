<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout android:layout_width = "match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_height = "wrap_content">

        <TextView android:layout_width = "match_parent"
            android:text="0"
            android:layout_weight="1"
            android:id="@+id/text_view"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="left|center"
            android:textSize="40sp"
            android:layout_height = "wrap_content"/>

        <Spinner android:layout_width = "match_parent"
            android:id="@+id/spiner"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"
            android:layout_height = "wrap_content"/>

        <TextView android:layout_width = "match_parent"
            android:text="0"
            android:gravity="left|center"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:id="@+id/text_view"
            android:textSize="40sp"
            android:layout_marginTop="20dp"
            android:layout_height = "wrap_content"/>

        <Spinner android:layout_width = "match_parent"
            android:id="@+id/spiner2"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"
            android:layout_height = "wrap_content"/>

    </LinearLayout>

    <LinearLayout android:layout_width = "match_parent"
        android:layout_weight="1"
        android:layout_height = "wrap_content">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="CE"
            android:id="@+id/btn_ce" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="BS"
            android:id="@+id/btn_bs" />

    </LinearLayout>
    <LinearLayout android:layout_width = "match_parent"
        android:layout_weight="1"
        android:layout_height = "wrap_content">


        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="7"
            android:id="@+id/btn_c7" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="8"
            android:id="@+id/btn_c8" />

        <Button
            android:text="9"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/btn_c9" />

    </LinearLayout>
    <LinearLayout android:layout_width = "match_parent"
        android:layout_weight="1"
        android:layout_height = "wrap_content">


        <Button
            android:text="4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/btn_c4" />
        <Button
            android:text="5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/btn_c5" />

        <Button
            android:text="6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/btn_c6" />

    </LinearLayout>
    <LinearLayout android:layout_width = "match_parent"
        android:layout_weight="1"
        android:layout_height = "wrap_content">


        <Button
            android:text="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/btn_c1" />
        <Button
            android:text="2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/btn_c2" />

        <Button
            android:text="3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/btn_c3" />

    </LinearLayout>
    <LinearLayout android:layout_width = "match_parent"
        android:layout_weight="1"
        android:layout_height = "wrap_content">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp" />
        <Button
            android:text="0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/btn_c0" />

        <Button
            android:text="."
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textSize="20dp"
            android:id="@+id/btn_dot" />

    </LinearLayout>
</LinearLayout>